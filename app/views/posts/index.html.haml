#posts
	%h1 ALL POSTS 
	%hr


	- @posts.each do |post|
		.post
			%h2.title= link_to post.title, post
			%p= truncate(post.content, length:200)
			%p.date  
				Created 
				=  time_ago_in_words(post.created_at)
				ago by
				%strong= post.user.username
			
			- if current_user == post.user	
				= link_to "delete", post, method: :delete, data: {confirm: "Are you sure"}, class: "btn btn-default"
				